<!-- views/partials/messages.ejs  -->


<div class="messagesBackground">
<div class="messageContainer">
    <p> Notice Board </p>
    <ul>
    <% for(var i=0; i < messages.length; i++) { %>
                <li> <%= messages[i].fname %>: <%= messages[i].messages %> </li>
    <% } %>
    </ul>
</div>
    <form action="/addMessage" method="POST">
        <input type="text" placeholder="" name="message" required>
        <button type="submit" id="addMessageButton" value="Submit">Add</button>
    </form>
</div>
